VERCEL_URL_PREVIEW=https://aaa-team-meet-p5zb-git-main-artems-projects-84069b41.vercel.app

# PostgreSQL Database
POSTGRES_DB=videomeet
POSTGRES_USER=postgres
POSTGRES_PASSWORD=1234
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Database URL for Prisma (use direct URL without env variables)
DATABASE_URL=postgresql://postgres:1234@localhost:5433/videomeet

# JWT Configuration
